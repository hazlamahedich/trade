# Backend API base URL
API_BASE_URL=http://localhost:8001

# OpenAPI generated file name (relative to the frontend directory)
OPENAPI_OUTPUT_FILE=openapi.json

# ===========================================
# E2E Test Configuration
# ===========================================

# Test Environment: local, staging, production
TEST_ENV=local

# Local URLs
BASE_URL=http://localhost:3000
API_URL=http://localhost:8000
WS_URL=ws://localhost:8000/ws

# Staging URLs (override in CI)
STAGING_BASE_URL=https://staging.trade-app.vercel.app
STAGING_API_URL=https://api-staging.trade-app.railway.app
STAGING_WS_URL=wss://api-staging.trade-app.railway.app/ws

# Production URLs (override in CI)
PROD_BASE_URL=https://trade-app.vercel.app
PROD_API_URL=https://api.trade-app.railway.app
PROD_WS_URL=wss://api.trade-app.railway.app/ws

# Test Credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123

# Fixed QA Token for E2E WebSocket Auth
# Required for WebSocket tests without full login flow
FIXED_QA_TOKEN=your-fixed-qa-token-here

# Feature Flags (for testing)
ENABLE_DEBATE_STREAMING=true
ENABLE_VOTING=true
